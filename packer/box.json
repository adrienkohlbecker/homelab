{
    "provisioners": [
        {
            "type": "shell",
            "scripts": [
                "{{ template_dir }}/scripts/vagrant.sh",
                "{{ template_dir }}/scripts/vmware.sh"
            ],
            "expect_disconnect": true,
            "only": [
              "hypervisor-base"
            ],
            "override": {
                "hypervisor-base": {
                    "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
                }
            }
        },
        {
            "type": "shell",
            "scripts": [
                "{{ template_dir }}/scripts/zfsroot.sh"
            ],
            "only": [
              "hypervisor-zfs"
            ],
            "override": {
                "hypervisor-zfs": {
                    "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
                }
            }
        },
        {
            "type": "shell",
            "scripts": [
                "{{ template_dir }}/scripts/volume.sh"
            ],
            "only": [
              "hypervisor-final"
            ],
            "override": {
                "hypervisor-final": {
                    "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
                }
            }
        },
        {
            "type": "shell",
            "scripts": [
                "{{ template_dir }}/scripts/cleanup.sh"
            ],
            "override": {
                "hypervisor-base": {
                    "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
                },
                "hypervisor-zfs": {
                    "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
                },
                "hypervisor-final": {
                    "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
                }
            }
        },
        {
            "type": "shell",
            "scripts": [
                "{{ template_dir }}/scripts/zerodisk.sh"
            ],
            "only": [
              "hypervisor-base"
            ],
            "override": {
                "hypervisor-base": {
                    "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
                }
            }
        }
    ],
    "builders": [
        {
            "type": "vmware-iso",
            "name": "hypervisor-base",
            "boot_command": [
              "<esc><f6><esc>",
              "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
              "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
              "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
              "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
              "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
              "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
              "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
              "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
              "<bs><bs><bs>",
              "initrd=/install/initrd.gz ",
              "auto=true ",
              "url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg ",
              "language=en ",
              "country=US ",
              "locale=en_US.UTF-8 ",
              "hostname={{ .Name }} ",
              "console-setup/ask_detect=false ",
              "keyboard-configuration/layoutcode=us ",
              "vga=788 noprompt quiet -- <enter>"
            ],
            "boot_wait": "10s",
            "disk_size": 8192,
            "guest_os_type": "ubuntu",
            "http_directory": "{{template_dir}}/http",
            "iso_checksum": "29a8b9009509b39d542ecb229787cdf48f05e739a932289de9e9858d7c487c80",
            "iso_checksum_type": "sha256",
            "iso_url": "http://releases.ubuntu.com/16.04.1/ubuntu-16.04.1-server-amd64.iso",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S bash '/tmp/shutdown.sh'",
            "vmx_data": {
                "memsize": 1536,
                "numvcpus": 2,
                "ethernet0.virtualdev" : "vmxnet3",
                "scsi0.virtualdev" : "pvscsi",
                "virtualhw.version" : "14"
            }
        },
        {
            "type": "vmware-vmx",
            "name": "hypervisor-zfs",
            "source_path": "output-hypervisor-base-with-disks/packer-hypervisor-base.vmx",
            "boot_wait": "10s",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S bash '/tmp/shutdown.sh'",
            "vm_name": "packer-hypervisor-zfs",
            "vmx_data": {
            }
        },
        {
            "type": "vmware-vmx",
            "name": "hypervisor-final",
            "source_path": "output-hypervisor-zfs-without-root/packer-hypervisor-zfs.vmx",
            "boot_wait": "10s",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S bash '/tmp/shutdown.sh'",
            "vm_name": "packer-hypervisor-final"
        }
    ],
    "post-processors": [
        {
          "type": "vagrant",
          "only": [
            "hypervisor-final"
          ],
          "output": "{{.Provider}}.box",
          "keep_input_artifact": true
        }
    ]
}
