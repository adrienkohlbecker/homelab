# filebrowser.service #######################################################################
[Unit]
Description=filebrowser
After=network-online.target
Wants=network-online.target
StartLimitInterval=600
StartLimitBurst=3
{% if zfs_root %}
{% if zfs_has_services_mount %}
After=zfs_mount_mnt_services.service
Requires=zfs_mount_mnt_services.service
{% endif %}
{% if zfs_has_media_mount %}
After=zfs_mount_mnt_media.service
Requires=zfs_mount_mnt_media.service
{% endif %}
{% if zfs_has_data_mount %}
After=zfs_mount_mnt_data.service
Requires=zfs_mount_mnt_data.service
{% endif %}
After=zfs_autosnapshot.target
PartOf=zfs_autosnapshot.target
{% endif %}

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
Restart=always
Delegate=yes
TimeoutSec=120
RestartSec=5
Type=notify
NotifyAccess=all
SyslogIdentifier=%N

ExecStartPre=/bin/rm -f %t/%n.ctr-id
ExecStart=/usr/bin/podman run \
    --cidfile=%t/%n.ctr-id \
    --cgroups=split \
    --sdnotify=healthy \
    --detach \
    --replace \
    --rm \
    --name filebrowser \
    --log-driver journald \
    --log-opt tag="filebrowser" \
    --volume {{ ansible_user_dir }}:/srv/home:ro \
    --volume /mnt/data:/srv/data:ro \
    --volume /mnt/media:/srv/media:ro \
    --volume /mnt/services:/srv/services:ro \
    --volume /mnt/services/filebrowser/database:/database \
    --volume /mnt/services/filebrowser/config:/config \
    --publish 127.0.0.1:5890:5890/tcp \
    --env PUID={{ filebrowser_user.uid }} \
    --env PGID={{ filebrowser_user.group }}  \
    --health-cmd         "curl --head --location --fail --silent --show-error --connect-timeout 1 --max-time 5 -o /dev/null http://localhost:5890/health" \
    --health-startup-cmd "curl --head --location --fail --silent --show-error --connect-timeout 1 --max-time 5 -o /dev/null http://localhost:5890/health" \
    --health-startup-interval "1s" \
    --health-startup-timeout "5s" \
    --health-start-period "100s" \
    --stop-timeout 120 \
    docker.io/filebrowser/filebrowser:v2.44.2-s6
ExecStop=/usr/bin/podman stop --ignore --cidfile=%t/%n.ctr-id
ExecStopPost=/usr/bin/podman rm --force --ignore --cidfile=%t/%n.ctr-id

[Install]
WantedBy=default.target
{% if zfs_root %}
WantedBy=zfs_autosnapshot.target
{% endif %}
