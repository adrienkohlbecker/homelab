# resume.service ######################################################################e
[Unit]
Description=Resume
After=docker.service
Requires=docker.service
Wants=nginx.service
PartOf=compose.service

StartLimitInterval=300
StartLimitBurst=5

[Service]
Restart=always
ExecStartPre=-/usr/bin/docker kill services_resume
ExecStartPre=-/usr/bin/docker rm services_resume
ExecStartPre=/usr/bin/docker pull kohlby/resume
ExecStart=/usr/bin/docker run \
    --name services_resume \
    --publish-service=resume.docker \
    --log-driver=syslog \
    --log-opt tag=compose.resume \
    kohlby/resume
ExecStop=/usr/bin/docker stop services_resume
TimeoutSec=120

[Install]
WantedBy=compose.service
